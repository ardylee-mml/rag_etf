# Authentication
JWT_SECRET=your-256-bit-secret  # Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local development: mongodb://localhost:27017/mongodb_rag
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/mongodb_rag
MONGODB_DB_NAME=mmldb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# JWT Configuration
JWT_EXPIRES_IN=24h

# Deepseek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Token Usage Limits
DAILY_TOKEN_LIMIT=100000
